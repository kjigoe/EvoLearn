<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joshkevingeoff.evolearn" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentAssignmentList"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".StudentAssignmentList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshkevingeoff.evolearn.StudentAssignmentList" />
        </activity>
        <activity
            android:name=".Account"
            android:label="@string/title_activity_account"
            android:parentActivityName=".StudentAssignmentList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshkevingeoff.evolearn.StudentAssignmentList" />
        </activity>
        <activity
            android:name=".ViewStudentAccount"
            android:label="@string/title_activity_view_student_account"
            android:parentActivityName=".StudentAssignmentList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshkevingeoff.evolearn.StudentAssignmentList" />
        </activity>
        <activity
            android:name=".ViewTeacherAccount"
            android:label="@string/title_activity_view_teacher_account"
            android:parentActivityName=".MyClassroom" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshkevingeoff.evolearn.MyClassroom" />
        </activity>
        <activity
            android:name=".MyClassroom"
            android:label="@string/title_activity_my_classroom" >
        </activity>
        <activity
            android:name=".ChallengeActivity"
            android:label="@string/title_activity_challenge"
            android:parentActivityName=".StudentAssignmentList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshkevingeoff.evolearn.StudentAssignmentList" />
        </activity>
        <activity
            android:name=".PracticeActivity"
            android:label="@string/title_activity_practice"
            android:parentActivityName=".StudentAssignmentList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshkevingeoff.evolearn.StudentAssignmentList" />
        </activity>
        <activity
            android:name=".ProblemSetActivity"
            android:label="@string/title_activity_problem_set"
            android:parentActivityName=".StudentAssignmentList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.joshkevingeoff.evolearn.StudentAssignmentList" />
        </activity>
    </application>

</manifest>
